<% provide(:title, "Edytuj dane użytkownika") %>
<h1>Edytuj dane użytkownika</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password, 'Hasło' %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Potwierdź hasło" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Zapisz", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">Zmień</a>
  </div>
</div>
