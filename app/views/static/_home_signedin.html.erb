<div class="row">
	<aside class="span4">
		<table class="table table-bordered table-condensed">
			<tr>
				<th colspan=2>Najbliższe mecze</th>
			</tr>
			<tr>
				<th>Mecz</th>
				<th>Data</th>
			</tr>
			<tbody>
				<% @next_matches.each do |m|%>
				<tr>
					<td><%= link_to "#{m.name}".html_safe, match_path(m) %></td>
					<td><%= localize(m.matchtime, :format => :short) %></td>
				</tr>
				<% end %>
			</tbody>

		</table>
		<table class="table table-bordered table-condensed">
			<tr>
				<th colspan=2>Najlepsi gracze</th>
			</tr>
			<tr>
				<th>Użytkownik</th>
				<th>Punkty</th>
			</tr>
			<tbody>
				<% @best_scorers.each do |user| %>
				<tr>
					<td><%= link_to user.name, user %></td>
					<td><%= user.points %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</aside>
	<div class="span8">
		<table class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
					<th colspan=3>Moje zakłady</th>
				</tr>
				<tr>
					<th>Mecz</th>
					<th>Termin</th>
					<th>Mój typ</th>
				</tr>
			</thead>
			<tbody>
				<% @bets.reverse_each do |bet| %>
				<tr>
					<td><%= link_to "#{bet.match.name}".html_safe, match_path(bet.match) %></td>
					<td><%= localize(bet.match.matchtime, :format => :short) %></td>
					<td><%= "#{bet.score1} - #{bet.score2}" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

	</div>
</div>
